<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="15dp">

        <ImageView
            android:id="@+id/iw_logo_championship_lw_item"
            android:layout_width="82dp"
            android:layout_height="82dp"
            android:src="@drawable/icon_circuit"
            />

        <TextView
            android:id="@+id/tv_name_team_lv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="10dp"
            android:maxWidth="250dp"
            android:text="TextView"
            android:textColor="#f41010"
            android:textSize="25dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_car_team_lv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="100dp"
            android:layout_marginTop="50dp"
            android:maxWidth="250dp"
            android:text="TextView"
            android:textColor="#000000"
            android:textSize="18dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tv_points_team_lv_item"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:maxWidth="250dp"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="300dp"
            android:text="TextView"
            android:textColor="#f41010"
            android:textSize="18dp"
            android:textStyle="bold"
            />


        <View
            android:layout_width="match_parent"
            android:layout_height="2dp"
            android:layout_marginTop="82dp"
            android:layout_marginBottom="2dp"
            android:background="#c0c0c0"/>


    </RelativeLayout>

</LinearLayout>